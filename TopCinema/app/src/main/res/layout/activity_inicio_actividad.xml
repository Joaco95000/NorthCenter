<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/darkGrey"
    tools:context=".InicioActividad">
    <Button
        android:id="@+id/btnInicioQuienesSomos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/estadoRojo"
        android:fontFamily="@font/comfortaa_light"
        android:onClick="cargarQuienesSomos"
        android:text="@string/txtBtnInicioQuienesSomos"
        android:textColor="@color/grey"
        android:textSize="24sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnInicioSistema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/estadoRojo"
        android:fontFamily="@font/comfortaa_light"
        android:text="@string/txtBtnInicioSistema"
        android:onClick="cargarLogin"
        android:textColor="@color/grey"
        android:textSize="24sp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btnIrPeliculas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/estadoRojo"
        android:fontFamily="@font/comfortaa_light"
        android:text="@string/txtBtnInicioRegistro"
        android:onClick="cargarRegister"
        android:textColor="@color/grey"
        android:textSize="24sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnIdioma"
        android:layout_width="70dp"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/estadoRojo"
        android:fontFamily="@font/chango"
        android:onClick="cargarIdioma" />
</LinearLayout>