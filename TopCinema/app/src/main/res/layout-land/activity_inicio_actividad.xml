<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/darkGrey"
    tools:context=".InicioActividad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnInicioQuienesSomos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/estadoRojo"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="cargarQuienesSomos"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/txtBtnInicioQuienesSomos"
            android:textColor="@color/grey"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnInicioSistema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/estadoRojo"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="cargarLogin"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/txtBtnInicioSistema"
            android:textColor="@color/grey"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnIrPeliculas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/estadoRojo"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="cargarRegister"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:text="@string/txtBtnInicioRegistro"
            android:textColor="@color/grey"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnIdioma"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:onClick="cargarIdioma"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_world" />
    </LinearLayout>

</LinearLayout>